    function searchVideos() {
    let query = document.getElementById("searchInput").value.toLowerCase();
    if (query) {
        alert("Searching for: " + query);
        // এখানে তুমি Firebase বা অন্য API দিয়ে রেজাল্ট আনতে পারো
    } else {
        alert("Please enter a search term!");
    }
}